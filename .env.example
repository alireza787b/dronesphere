# DroneSphere Environment Configuration
APP_NAME=DroneSphere
APP_ENV=development
APP_DEBUG=true

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8002

# Security
SECRET_KEY=your-secret-key-here-change-this

# Database
DATABASE_URL=postgresql+asyncpg://dronesphere:dronesphere_pass_dev@localhost:5432/dronesphere
REDIS_URL=redis://localhost:6379/0
RABBITMQ_URL=amqp://dronesphere:dronesphere_pass_dev@localhost:5672/dronesphere

# Drone
MAVSDK_SERVER_ADDRESS=localhost
MAVSDK_SERVER_PORT=50051
DRONE_CONNECTION_STRING=udp://:14540

# AI/LLM
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Safety
MAX_ALTITUDE_METERS=120
MAX_SPEED_MPS=15
MIN_BATTERY_PERCENT=20

# Logging
LOG_LEVEL=INFO


# ==========================================
# NLP Service Configuration
# ==========================================

# NLP Provider Selection
# Options: spacy, openai, deepseek, anthropic, ollama, hybrid
NLP_PROVIDER=spacy

# General NLP Settings
NLP_CONFIDENCE_THRESHOLD=0.5          # Min confidence to accept command (0.0-1.0)
NLP_REQUIRE_CONFIRMATION=true         # Require confirmation for medium confidence
NLP_DEFAULT_LANGUAGE=en               # Default language (en, fa, es, etc.)

# ==========================================
# spaCy Configuration (Local, Fast, Free)
# ==========================================
SPACY_MODEL=en_core_web_md            # Options: en_core_web_sm, en_core_web_md, en_core_web_lg

# ==========================================
# OpenAI Configuration (Advanced Understanding)
# ==========================================
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4                  # Options: gpt-4, gpt-3.5-turbo
# OPENAI_TEMPERATURE=0.3              # Lower = more deterministic
# OPENAI_MAX_TOKENS=500               # Max response length

# ==========================================
# Deepseek Configuration (Technical Commands)
# ==========================================
# DEEPSEEK_API_KEY=your-deepseek-api-key-here
# DEEPSEEK_MODEL=deepseek-coder       # Options: deepseek-coder, deepseek-chat
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ==========================================
# Anthropic Configuration (Claude)
# ==========================================
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229

# ==========================================
# Ollama Configuration (Local LLMs)
# ==========================================
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2                 # Options: llama2, mistral, codellama

# ==========================================
# Hybrid Mode Configuration
# ==========================================
# Uses spaCy first, falls back to LLM if confidence is low
# NLP_PRIMARY_PROVIDER=spacy
# NLP_FALLBACK_PROVIDER=openai
# NLP_HYBRID_THRESHOLD=0.5            # Switch to fallback below this confidence

# ==========================================
# Language-Specific Settings
# ==========================================

# Persian/Farsi Support (Future)
# NLP_PERSIAN_MODEL=hazm              # Options: hazm, parsbert
# NLP_PERSIAN_ENABLE=false

# Multi-language Support
# NLP_AUTO_DETECT_LANGUAGE=false      # Auto-detect input language
# NLP_SUPPORTED_LANGUAGES=en,fa       # Comma-separated language codes

# ==========================================
# Advanced Settings
# ==========================================

# Command Parsing
NLP_MAX_COMMAND_LENGTH=500            # Max characters in a command
NLP_PARSE_TIMEOUT_MS=1000             # Timeout for parsing
NLP_ENABLE_SPELL_CORRECTION=true     # Auto-correct typos
NLP_ENABLE_ABBREVIATIONS=true        # Expand abbreviations (RTH -> return to home)

# Suggestions
NLP_MAX_SUGGESTIONS=5                 # Max autocomplete suggestions
NLP_SUGGESTION_MIN_LENGTH=2           # Min characters before suggestions

# Caching
NLP_ENABLE_CACHE=true                 # Cache parsed commands
NLP_CACHE_TTL_SECONDS=300            # Cache time-to-live

# Logging
NLP_LOG_COMMANDS=true                 # Log all commands (privacy consideration)
NLP_LOG_CONFIDENCE_THRESHOLD=0.3      # Only log commands above this confidence

# Safety
NLP_REJECT_LOW_CONFIDENCE=true       # Reject commands below threshold
NLP_EMERGENCY_KEYWORDS=emergency,stop,halt,abort,help,mayday