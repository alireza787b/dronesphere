# .env.example
# Copy this file to .env and update with your values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO

# Web Frontend Configuration
WEB_PORT=3010
WEB_HOST=localhost

# LLM Configuration
LLM_PROVIDER=ollama  # Options: ollama, openai, anthropic, deepseek
OLLAMA_HOST=http://localhost:11434
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# Drone Configuration
DEFAULT_DRONE_PORT=14540
SITL_HOST=localhost
MAVSDK_SERVER_PORT=50051

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3010
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (future use)
DATABASE_URL=sqlite:///./dronesphere.db

# Optional Services
NETBIRD_ENABLED=false
NETBIRD_SETUP_KEY=your-netbird-key-here
