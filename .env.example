# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
LOG_LEVEL=INFO

# Agent Configuration
AGENT_SERVER_URL=ws://localhost:8001/ws/agent

# Web Frontend Configuration
WEB_PORT=3010
WEB_HOST=localhost

# LLM Configuration
LLM_PROVIDER=openrouter  # Options: openrouter, ollama, openai, anthropic, deepseek
OPENROUTER_API_KEY=your-openrouter-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemma-2-9b-it:free
OPENROUTER_SITE_URL=https://dronesphere.ai
OPENROUTER_APP_NAME=DroneSphere Control System

# Other LLM Providers (for future use)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet
DEEPSEEK_API_KEY=your-deepseek-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# LLM Settings
LLM_TEMPERATURE=0.1  # Low temperature for consistent command extraction
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30  # seconds

# Drone Configuration
DEFAULT_DRONE_PORT=14540
SITL_HOST=localhost
MAVSDK_SERVER_PORT=50051

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=["http://localhost:3010"]
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (future use)
DATABASE_URL=sqlite:///./dronesphere.db

# Optional Services
NETBIRD_ENABLED=false
NETBIRD_SETUP_KEY=your-netbird-key-here