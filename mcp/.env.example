# DroneSphere MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Configuration (Required)
# =============================================================================

# OpenRouter API Key (Recommended - supports many models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative: OpenAI API Key (if using OpenAI directly)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Optional Site Information (for OpenRouter rankings)
# =============================================================================

# Your site URL (optional, helps with OpenRouter rankings)
SITE_URL=https://your-drone-site.com

# Your site/app name (optional)
SITE_NAME=DroneSphere MCP


SITL_MODE = true  # Set to true for SITL (Software In The Loop) mode, false for real hardware
DEBUG_MODE = true # Enable debug mode for verbose logging in LLM responses
# =============================================================================
# Environment Overrides (Optional)
# =============================================================================

# Override default model from config.yaml (optional)
# LLM_MODEL=anthropic/claude-3-sonnet

# Override API base URL (optional)
# LLM_BASE_URL=https://openrouter.ai/api/v1

# Override temperature setting (optional)
# LLM_TEMPERATURE=0.1

# Override max tokens (optional)
# LLM_MAX_TOKENS=1000

# =============================================================================
# Development Settings (Optional)
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG_MODE=false

# =============================================================================
# Getting API Keys
# =============================================================================

# OpenRouter (Recommended):
# 1. Go to https://openrouter.ai/
# 2. Sign up for account
# 3. Generate API key
# 4. Supports Claude, GPT-4, and many other models
# 5. Very affordable pricing

# OpenAI (Alternative):
# 1. Go to https://platform.openai.com/
# 2. Create account and add payment method
# 3. Generate API key
# 4. Only supports OpenAI models (GPT-3.5, GPT-4)
