# Docker Environment Configuration
# This file is used by docker-compose

# Project settings
COMPOSE_PROJECT_NAME=dronesphere
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Service hostnames (internal Docker network)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
REDIS_HOST=redis
REDIS_PORT=6379
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# External access (from host machine)
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
RABBITMQ_EXTERNAL_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Simulator settings
PX4_SITL_HOST=px4-sitl
MAVSDK_HOST=mavsdk-server
MAVSDK_PORT=50040

# Development settings
PYTHON_ENV=development
LOG_LEVEL=DEBUG
